@{
    ViewData["Title"] = "Home Page";
}
<style>
    .main-box {
        margin-top: 25px;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center
    }

    .left-box {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin: 25px;
    }

    .right-box {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .h4-rightBox {
        font-size: 22px;
    }

    .a-rightBox {
        color:lightgray;
        font-style: italic;
        padding: 10px;
        text-decoration: none;
        border-radius: 3px;
        margin: 10px;
        border: 3px solid #ededed;
    }

    .a-rightBox:hover {
        background-color: #ededed;
        color: navy;
    }

    .locations-span {
        margin: 15px;
        color: #d9d9d9;
    }

    .box-for-span {
        margin-top: 20px;
    }
</style>
<div class="main-box">
    <div class="left-box text-center">
        <h1 style="color: #d9d9d9; font-style: italic; font-weight: bold" class="display-3">
            Human Resource
            <br /><span style="color: #d9d9d9; font-weight: bold" class="display-4">
                        Manager!
                        <i class="fas fa-dragon"></i>
                  </span>
        </h1>
        <div class="box-for-span">
            <i class='fas fa-map-marker-alt' style='font-size: 20px; color: #d9d9d9'></i>
            @foreach (var location in ViewBag.all_locations)
            {
                <span class="locations-span">
                    @location.LocationName
                </span>
            }
        </div>
    </div>
    @if (ViewBag.login != null)
    {
        <div style="border-top:2px solid white" class="right-box text-center">
            <h4 style="color:white;" class="h4-rightBox">Manage</h4>
            <a class="a-rightBox" asp-controller="EmployeesList" asp-action="displayEmployees">Employees in @ViewBag.location</a>
            <a class="a-rightBox" asp-controller="HrList" asp-action="edit_HR">Edit Account</a>
        </div>
    }
</div>

<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>