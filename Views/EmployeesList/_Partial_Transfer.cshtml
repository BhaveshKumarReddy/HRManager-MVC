@model HRM_Project.Models.EmployeesList

<div class="row">
    <div class="col-md-4">
        <form asp-action="transferEmployee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" />
            <p style="color:#efefef">Employee ID: @Model.EmployeeId</p>
            <p style="color:#efefef">Employee Name: @Model.EmployeeName</p>
            <div class="form-group">
                <label style="color:#efefef" asp-for="LocationId" class="control-label"></label>
                <select asp-for="LocationId" class="form-control" asp-items="ViewBag.locations"></select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Transfer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
