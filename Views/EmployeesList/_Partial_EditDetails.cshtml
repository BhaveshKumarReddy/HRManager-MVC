@model HRM_Project.Models.EmployeesList

<h5  style="color:#ededed">Edit Information</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="editDetails">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" />
            <div class="form-group">
                <label  style="color:#ededed" asp-for="EmployeeName" class="control-label"></label>
                <input required type="text" asp-for="EmployeeName" class="form-control" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  style="color:#ededed" asp-for="EmployeeDoj" class="control-label"></label>
                <input required type="date" asp-for="EmployeeDoj" class="form-control" />
                <span asp-validation-for="EmployeeDoj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:#ededed" asp-for="EmployeeRole" class="control-label"></label>
                <input required type="text" asp-for="EmployeeRole" class="form-control" />
                <span asp-validation-for="EmployeeRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:#ededed" asp-for="EmployeeSalary" class="control-label"></label>
                <input required type="number" asp-for="EmployeeSalary" class="form-control" />
                <span asp-validation-for="EmployeeSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:#ededed" asp-for="EmployeePoints" class="control-label"></label>
                <input required type="number" asp-for="EmployeePoints" class="form-control" />
                <span asp-validation-for="EmployeePoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:#ededed" asp-for="EmployeeAppraisalDate" class="control-label"></label>
                <input required type="date" asp-for="EmployeeAppraisalDate" class="form-control" />
                <span asp-validation-for="EmployeeAppraisalDate" class="text-danger"></span>
            </div>
            <div style="display:none" class="form-group">
                <label style="color:#ededed" asp-for="LocationId" class="control-label"></label>
                <select asp-for="LocationId" class="form-control" asp-items="ViewBag.locations"></select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}